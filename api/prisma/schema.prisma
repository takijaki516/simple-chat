generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  email    String  @unique
  username     String
  password String

  refreshToken String?

  conversations Conversations[] @relation("owner")

  // NOTE: prisma's implicit relation between users and conversations
  joinedConverstaions Conversations[] @relation("joined")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Conversations {
  id String @id @default(cuid())

  ownerId String
  owner   User   @relation("owner", fields: [ownerId], references: [id], onDelete: Cascade)

  participants User[] @relation("joined")

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("conversations")
}
